<Home>
    name: "home"
    on_enter:
        root.initWindow()
    on_leave:
        root.cleanup()


    FloatLayout:
        id: layout

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        MDToolbar:
            id: title
            title:"CB Open Source Intel - Home"
            anchor_title: "center"
            left_action_items: [["menu", lambda x: root.basic_nav.ids.nav_drawer.set_state("open")]]

<NoCBR>

    MDFillRoundFlatButton:
        pos_hint:{"center_x":0.5,"center_y":0.6}
        size_hint: 0.5, 0.1
        text: "Manage Threat Intel"
        color: (0,0,0,1)
        background_normal: ''
        background_color: (17/255,198/255,1,1)
        on_release:
            app.root.current = "feeds"

    MDFillRoundFlatButton:
        pos_hint:{"center_x":0.5,"center_y":0.4}
        size_hint: 0.5, 0.1
        text: "Manage Watchlists"
        color: (0,0,0,1)
        background_normal: ''
        background_color: (17/255,198/255,1,1)
        on_release:
            app.root.current = "watchlists"

<CBRBtn>

    MDFillRoundFlatButton:
        pos_hint:{"center_x":0.5,"center_y":0.7}
        size_hint: 0.5, 0.1
        text: "Manage Threat Intel"
        color: (0,0,0,1)
        background_normal: ''
        background_color: (17/255,198/255,1,1)
        on_release:
            app.root.current = "feeds"

    MDFillRoundFlatButton:
        pos_hint:{"center_x":0.5,"center_y":0.5}
        size_hint: 0.5, 0.1
        text: "Manage Watchlists"
        color: (0,0,0,1)
        background_normal: ''
        background_color: (17/255,198/255,1,1)
        on_release:
            app.root.current = "watchlists"

    MDFillRoundFlatButton:
        pos_hint:{"center_x":0.5,"center_y":0.3}
        size_hint: 0.5, 0.1
        text: "Convert CBR Watch Lists"
        color: (0,0,0,1)
        background_normal: ''
        background_color: (17/255,198/255,1,1)
        on_release:
            app.root.current = "converter"

<CBRNav>
    id: cbr_nav
    OneLineIconListItem:
        text: "CBR Converter"
        IconLeftWidget:
            icon:"logos/cbr2.png"
